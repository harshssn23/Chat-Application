<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats</h3>
    <form method="get" action="/chats/new">
        <button class="btn">New Chat</button>
    </form>
    <br>
    <% for(let chat of chats) { %>
        <div class="chat">
            <p>From : <%= chat.from%></p>
            <div class="msg">
                <p>Message : <%= chat.msg%></p>
                <form method="get" action="/chats/<%= chat.id%>/edit">
                    <button>Edit</button>
                </form>
            </div>
            <p>Received By : <%= chat.to%></p>
            <p>Time : <%= chat.created_at.toString().split(" ")[4]%></p>
            <p>Date : <%= chat.created_at.toString().split(" ").slice(0,4).join(" ")%></p>

            <form method="post" action="/chats/<%= chat.id%>?_method=DELETE">
                <button>Delete</button>
            </form>
        </div>
        <br><br>
    <% } %>
</body> 
</html>